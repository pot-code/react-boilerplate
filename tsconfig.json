{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es6"
    ],
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@stores/*": [
        "src/store/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
