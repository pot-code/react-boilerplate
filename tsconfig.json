{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
