{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@stores/*": [
        "src/store/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ]
}
